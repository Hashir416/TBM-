<%- include ../Partials/header.ejs %>
<%- include ../Partials/main_nav.ejs %>
<!-- Content for Edit Tournament Page -->
<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="col-md-6">
        <h1 class="text-center"><%= title %></h1>
        <form class="form" method="POST">
            <div class="form-group mb-3">
                <label for="tournamentNameTextField">Tournament Name</label>
                <input type="text" class="form-control" id="tournamentNameTextField" value="<%= Tournament.tournamentName %>" name="tournamentName" required>
            </div>
            <div class="form-group mb-3">
                <label for="numberOfTeamsTextField">Number of Teams</label>
                <input type="number" class="form-control" id="numberOfTeamsTextField" value="<%= Tournament.numberOfTeams %>" name="numberOfTeams" required>
            </div>
            <div class="form-group mb-3">
                <label for="teamsTextField">Team Names (Comma Separated)</label>
                <input type="text" class="form-control" id="teamsTextField" value="<%= Tournament.teams.join(', ') %>" name="teams" required>
            </div>
            <div class="form-group mb-3">
                <label for="startDateTextField">Start Date</label>
                <input type="date" class="form-control" id="startDateTextField" value="<%= Tournament.startDate.toISOString().split('T')[0] %>" name="startDate" required>
            </div>
            <div class="form-group mb-3">
                <label for="endDateTextField">End Date</label>
                <input type="date" class="form-control" id="endDateTextField" value="<%= Tournament.endDate.toISOString().split('T')[0] %>" name="endDate" required>
            </div>
            <div class="form-group mb-3">
                <label for="statusDropdown">Tournament Status</label>
                <select class="form-control" id="statusDropdown" name="status" required>
                    <option value="Upcoming" <%= Tournament.status === 'Upcoming' ? 'selected' : '' %>>Upcoming</option>
                    <option value="Ongoing" <%= Tournament.status === 'Ongoing' ? 'selected' : '' %>>Ongoing</option>
                    <option value="Completed" <%= Tournament.status === 'Completed' ? 'selected' : '' %>>Completed</option>
                </select>
            </div>
            <div class="d-flex justify-content-between">
                <button class="btn btn-primary" type="submit">
                    Submit <i class="fas fa-check"></i>
                </button>
                <button class="btn btn-warning" type="reset">
                    Cancel <i class="fas fa-times"></i>
                </button>
            </div>
        </form>
    </div>
</div>
<%- include ../Partials/footer.ejs %>


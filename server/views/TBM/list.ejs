<%- include ../Partials/header.ejs %>
<%- include ../Partials/main_nav.ejs %>
<!-- Tournament Database -->
<div class="d-flex flex-column align-items-center vh-100 justify-content-center">
    <h1 class="text-center mb-4"><%= title %></h1>
    <a href="/tournaments/add" class="btn btn-primary mb-3" role="button">
        <i class="fas fa-plus-circle"></i> Add Tournament
    </a>
    <div class="table-responsive w-75">
        <table class="table table-bordered table-striped table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th>Tournament Name</th>
                    <th>Number of Teams</th>
                    <th>Teams</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% for(let count = 0; count < TournamentList.length; count++) { %>
                <tr>
                    <td><%= TournamentList[count].tournamentName %></td>
                    <td><%= TournamentList[count].numberOfTeams %></td>
                    <td><%= TournamentList[count].teams.join(', ') %></td>
                    <td><%= TournamentList[count].startDate.toISOString().split('T')[0] %></td>
                    <td><%= TournamentList[count].endDate.toISOString().split('T')[0] %></td>
                    <td><%= TournamentList[count].status %></td>
                    <td>
                        <div class="d-flex justify-content-center gap-2">
                            <a href="/tournaments/edit/<%= TournamentList[count]._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i> Edit
                            </a>
                            <a href="/tournaments/delete/<%= TournamentList[count]._id %>" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
<%- include ../Partials/footer.ejs %>



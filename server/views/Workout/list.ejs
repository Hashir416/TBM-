<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!-- Workout Database -->
<div class="d-flex flex-column align-items-center vh-100 justify-content-center">
    <h1 class="text-center mb-4"><%= title %></h1>
    <a href="/workouts-list/add" class="btn btn-primary mb-3" role="button">
        <i class="fas fa-plus-circle"></i> Add Workout
    </a>
    <div class="table-responsive w-75">
        <table class="table table-bordered table-striped table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th>Date</th>
                    <th>Exercise</th>
                    <th>Sets</th>
                    <th>Reps</th>
                    <th>Weight</th>
                    <th>Focus</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% for(let count = 0; count < WorkoutList.length; count++) { %>
                <tr>
                    <td><%= WorkoutList[count].date %></td>
                    <td><%= WorkoutList[count].exercise %></td>
                    <td><%= WorkoutList[count].sets %></td>
                    <td><%= WorkoutList[count].reps %></td>
                    <td><%= WorkoutList[count].weight %></td>
                    <td><%= WorkoutList[count].focus %></td>
                    <td>
                        <div class="d-flex justify-content-center gap-2">
                            <a href="/workouts-list/edit/<%= WorkoutList[count]._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i> Edit
                            </a>
                            <a href="/workouts-list/delete/<%= WorkoutList[count]._id %>" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
<%- include ../Partials/footer.ejs%>

